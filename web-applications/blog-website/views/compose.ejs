<%- include("partials/header.ejs") %>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="first-field">Title</label>
        <input class="form-control" type="text" name="newContentTitle" id="first-field">
    </div>
    <div class="form-group">
        <label for="second-field">Post</label>
        <textarea class="form-control" name="newContent" id="second-field" rows="4"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

